#:import get_video_src playlist.get_video_src
#:set _default_image "battle_of_vassouras.jpg"

<Video>:
    allow_strech: True
    color: 0, 0, 0, 0
    source: get_video_src()
    cover: _cover
    image: _default_image

    AsyncImage:
        id: _cover
        source: root.image
        size: root.width, root.height
