#:set _default_video "./2-1-diagram-beautification.mp4"
#:set _default_image "battle_of_vassouras.jpg"

<Video>:
    allow_strech: True
    color: 0, 0, 0, 0
    source: _default_video
    cover: _cover
    image: _default_image

    AsyncImage:
        id: _cover
        source: root.image
        size: root.width, root.height
